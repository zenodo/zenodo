{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://zenodo.org/schemas/records/objecttype-v1.0.0.json",
  "type": "object",
  "definitions": {
    "title": {
      "type": "object",
      "title": "Mapping of language code to translation of title",
      "patternProperties": {
        "^([a-z_]){2,5}$": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "internal_id",
    "id",
    "title",
    "title_plural",
    "schema.org",
    "datacite"
  ],
  "properties": {
    "internal_id": {
      "type": "string"
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "$ref": "#/definitions/title"
    },
    "title_plural": {
      "$ref": "#/definitions/title"
    },
    "schema.org": {
      "type": "string",
      "format": "uri"
    },
    "datacite": {
      "type": "object",
      "properties": {
        "general": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "required": [
          "general"
        ]
      }
    },
    "eurepo": {
      "type": "string"
    },
    "parent": {
      "type": "object"
    },
    "children": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "csl": {
      "type": "string",
    }
  }
}
