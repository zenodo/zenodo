{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://zenodo.org/schemas/records/record-v1.0.0.json",
  "title": "Zenodo Record Schema v1.0.0",
  "additionalProperties": false,
  "definitions": {
    "person_or_org": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "description": "Full name of person or organisation. Personal name format: family, given.",
          "type": "string"
        },
        "affiliation": {
          "description": "Affiliation for the purpose of this specific record.",
          "type": "string"
        },
        "familyname": {
          "description": "Family name of person if known.",
          "type": "string"
        },
        "givennames": {
          "description": "Given names of person if known.",
          "type": "string"
        },
        "gnd": {
          "description": "Gemeinsame Normdatei identifier for creator.",
          "type": "string"
        },
        "orcid": {
          "description": "ORCID identifier for creator.",
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "contributor_person_or_org": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "description": "Full name of person or organisation. Personal name format: family, given.",
          "type": "string"
        },
        "affiliation": {
          "description": "Affiliation for the purpose of this specific record.",
          "type": "string"
        },
        "familyname": {
          "description": "Family name of person if known.",
          "type": "string"
        },
        "givennames": {
          "description": "Given names of person if known.",
          "type": "string"
        },
        "gnd": {
          "description": "Gemeinsame Normdatei identifier for creator.",
          "type": "string"
        },
        "orcid": {
          "description": "ORCID identifier for creator.",
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "ContactPerson",
            "DataCollector",
            "DataCurator",
            "DataManager",
            "Distributor",
            "Editor",
            "Funder",
            "HostingInstitution",
            "Other",
            "Producer",
            "ProjectLeader",
            "ProjectManager",
            "ProjectMember",
            "RegistrationAgency",
            "RegistrationAuthority",
            "RelatedPerson",
            "ResearchGroup",
            "RightsHolder",
            "Researcher",
            "Sponsor",
            "Supervisor",
            "WorkPackageLeader"
          ]
        }
      },
      "required": [
        "name",
        "type"
      ]
    },
    "scheme": {
      "description": "Persistent identifier scheme.",
      "type": "string",
      "enum": [
        "ark",
        "arxiv",
        "doi",
        "bibcode",
        "ean13",
        "eissn",
        "handle",
        "isbn",
        "issn",
        "istc",
        "lissn",
        "lsid",
        "pmid",
        "pmcid",
        "purl",
        "upc",
        "url",
        "urn",
        "orcid",
        "gnd"
      ]
    },
    "relation": {
      "description": "Relation type.",
      "type": "string",
      "enum": [
        "isCitedBy",
        "cites",
        "isSupplementTo",
        "isSupplementedBy",
        "isContinuedBy",
        "continues",
        "hasMetadata",
        "isMetadataFor",
        "isNewVersionOf",
        "isPreviousVersionOf",
        "isPartOf",
        "hasPart",
        "isReferencedBy",
        "references",
        "isDocumentedBy",
        "documents",
        "isCompiledBy",
        "compiles",
        "isVariantFormOf",
        "isOrignialFormOf",
        "isIdenticalTo",
        "isReviewedBy",
        "reviews",
        "isDerivedFrom",
        "isSourceOf"
      ]
    }
  },
  "type": "object",
  "required": [
    "recid",
    "resource_type",
    "publication_date",
    "title",
    "creators",
    "description",
    "access_right"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "recid": {
      "description": "Invenio record identifier (integer).",
      "type": "number"
    },
    "doi": {
      "description": "Digital Object Identifier (DOI).",
      "type": "string"
    },
    "isbn": {
      "description": "International Standard Book Number (ISBN).",
      "type": "string"
    },
    "altmetric_id": {
      "description": "Almetric.com identifier.",
      "type": "string"
    },
    "resource_type": {
      "description": "Record resource type.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "description": "General resource type.",
          "type": "string"
        },
        "subtype": {
          "description": "Specific resource type.",
          "type": "string"
        }
      },
      "required": [
        "type"
      ]
    },
    "publication_date": {
      "description": "Record publication date (IS8601-formatted). EDTF support to be added for field.",
      "type": "string"
    },
    "title": {
      "description": "Record title.",
      "type": "string"
    },
    "creators": {
      "description": "Creators of record in order of importance.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/person_or_org"
      }
    },
    "description": {
      "description": "Description/abstract for record.",
      "type": "string"
    },
    "keywords": {
      "description": "Free text keywords.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "subjects": {
      "description": "Subjects from specific vocabularies.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "term": {
            "description": "Subject term value.",
            "type": "string"
          },
          "identifier": {
            "description": "Subjects term identifier.",
            "type": "string"
          },
          "scheme": {
            "description": "Identifier scheme.",
            "type": "string"
          }
        }
      }
    },
    "notes": {
      "description": "Additional notes for record.",
      "type": "string"
    },
    "language": {
      "description": "ISO 639-1 or IETF BCP 47 language code.",
      "type": "string"
    },
    "access_right": {
      "description": "Access right for record.",
      "type": "string",
      "enum": [
        "open",
        "embargoed",
        "restricted",
        "closed"
      ]
    },
    "embargo_date": {
      "description": "Embargo date of record (ISO8601 formatted date).",
      "type": "string"
    },
    "access_conditions": {
      "description": "Conditions under which access is given if record is restricted.",
      "type": "string"
    },
    "license": {
      "description": "License for embargoed/open access content.",
      "type": "object"
    },
    "communities": {
      "description": "List of community identifiers.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "provisional_communities": {
      "description": "List of provisional community identifiers. To be removed.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "grants": {
      "description": "Source of grants/awards which have funded all or part of this particular record.",
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "related_identifiers": {
      "description": "Related research outputs.",
      "type": "array",
      "items": {
        "properties": {
          "identifier": {
            "description": "Identifier of research output.",
            "type": "string"
          },
          "relation": {
            "$ref": "#/definitions/relation"
          },
          "scheme": {
            "$ref": "#/definitions/scheme"
          }
        },
        "required": [
          "identifier",
          "relation",
          "scheme"
        ]
      }
    },
    "alternate_identifiers": {
      "description": "Alternate identifiers for record.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "identifier": {
            "description": "Identifier of research output.",
            "type": "string"
          },
          "scheme": {
            "$ref": "#/definitions/scheme"
          }
        },
        "required": [
          "identifier",
          "scheme"
        ]
      }
    },
    "contributors": {
      "description": "Contributors in order of importance.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/contributor_person_or_org"
      }
    },
    "references": {
      "description": "Raw textual references when identifier is not known.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "raw_reference": {
            "type": "string"
          }
        }
      }
    },
    "journal": {
      "description": "Journal in which this record is published.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "issue": {
          "description": "Journal issue.",
          "type": "string"
        },
        "pages": {
          "description": "Journal page(s).",
          "type": "string"
        },
        "volume": {
          "description": "Journal volume.",
          "type": "string"
        },
        "title": {
          "description": "Journal title.",
          "type": "string"
        },
        "year": {
          "description": "Journal year.",
          "type": "string"
        }
      }
    },
    "meetings": {
      "description": "Associated meetings.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "acronym": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "place": {
            "type": "string"
          },
          "dates": {
            "type": "string"
          },
          "session": {
            "type": "string"
          },
          "session_part": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      }
    },
    "imprint": {
      "description": "Imprint in of book or report.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "publisher": {
          "type": "string"
        },
        "place": {
          "type": "string"
        },
        "year": {
          "type": "string"
        }
      }
    },
    "part_of": {
      "description": "For parts of books and reports.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "publisher": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      }
    },
    "thesis_university": {
      "description": "Awarding university in case of a thesis.",
      "type": "string"
    },
    "thesis_supervisors": {
      "description": "Supervisors of thesis in order of importance.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/person_or_org"
      }
    },
    "files": {
      "description": "Files for this record.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "require": [
          "bucket",
          "filename",
          "version_id",
          "size",
          "checksum"
        ],
        "properties": {
          "bucket": {
            "description": "Bucket identifier for file.",
            "type": "string"
          },
          "filename": {
            "description": "Filename.",
            "type": "string"
          },
          "version_id": {
            "description": "Filename.",
            "type": "string"
          },
          "size": {
            "description": "File size in bytes.",
            "type": "number"
          },
          "checksum": {
            "description": "Checksums of file.",
            "type": "string"
          },
          "previewer": {
            "description": "Identifier for previewer needed to preview this file.",
            "type": "string"
          },
          "type": {
            "description": "File type extension.",
            "type": "string"
          }
        }
      }
    },
    "owners": {
      "description": "List of user ids that are record as owner of record.",
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "_oai": {
      "description": "OAI-PMH specific information.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "description": "OAI-PMH record identifier.",
          "type": "string"
        },
        "sets": {
          "description": "OAI-PMH sets for record.",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "updated": {
          "description": "Last OAI-PMH set update (ISO8601 formatted timestamp)",
          "type": "string"
        }
      }
    },
    "_internal": {
      "description": "Metadata for internal use only.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "state": {
          "type": "string",
          "enum": [
            "draft",
            "published"
          ]
        },
        "comments": {
          "description": "Comments for internal purposes.",
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "timestamp": {
                "description": "ISO8601 formatted date time stamp.",
                "type": "string"
              },
              "user_id": {
                "description": "User making the comment.",
                "type": "string"
              },
              "comment": {
                "description": "Comment.",
                "type": "string"
              }
            },
            "required": [
              "timestamp",
              "user_id",
              "comment"
            ]
          }
        },
        "source": {
          "description": "Information related to initial source of acquisition.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "legacy_deposit_id": {
              "anyOf" : [{"type": "string"}, {"type": "null"}]
            },
            "agents": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "role": {
                    "type": "string",
                    "enum": [
                      "uploader"
                    ]
                  },
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  },
                  "user_id": {
                    "anyOf" : [{"type": "string"}, {"type": "null"}]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
